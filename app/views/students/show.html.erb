<section class="container">
  <div class='clearfix mb-3'>
    <button onclick='history.back()' class='btn btn-info float-end'>Go Back</button>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="card mb-4">
        <div class="card-body text-center">
          <% if @student.photo.attached? %>
            <td><%= image_tag @student.photo, alt:"avatar", class:"rounded-circle img-fluid" %></td>
          <% else %>
            <td><%= image_tag 'profile.webp', alt:"avatar", class:"rounded-circle img-fluid" %></td>
          <% end %>
          <h5 class="my-3"><%= @student.name %></h5>
        </div>
      </div>
      <div class="card mb-4 mb-lg-0">
        <div class="card-body p-2">
          <% if @student.docs.attached? %>
            <h4 class='text-center'> Documents </h4>
            <% @student.docs.each do |doc| %>
              <div class='d-flex justify-content-between align-items-center'>
                <%= link_to 'Download', url_for(doc), class:'btn btn-info px-2 py-1 m-1' %>
                <%= link_to 'Delete', purge_document_path(doc), method: :delete, class:'btn btn-danger px-2 py-1 m-1' %>
              </div>
              <hr>
            <% end %>
          <% else %>
            <h6 class='text-center'> No Documents </h6>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Full Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.name %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Father Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.father_name %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Mother Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.mother_name %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Email</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.email %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Date of Birth</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.date_of_birth %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Mobile</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.contact_number %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Address</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.address %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Class</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">
                <%= ClassCategory.find(@student.class_category_id).classname %>
                <%= Section.find(@student.section_id).section %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Academic Year</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @student.academic_year %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
