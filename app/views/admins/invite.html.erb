<div class='container'>
  <div class='clearfix mb-3'>
    <button onclick='history.back()' class='btn btn-info float-end'>Go Back</button>
  </div>
  <div class="w-res mx-auto p-4 text-dark border border-dark">
    <h1 class="text-center"> Complete Sign-up </h1>
    <%= form_with model: @admin, url: invite_admin_path(@invitation.token) do |f|%>
      <div class="mb-3">
        <%= f.label :email, class:"form-label" %><br>
        <%= f.email_field :email, value: @invitation.email, disabled: true, class:"form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class:"form-label"  %>
        <%= f.password_field :password, class:"form-control" %>
        <p class='text-danger'><%= show_errors(@admin, :password) %></p>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, class:"form-label"  %>
        <%= f.password_field :password_confirmation, class:"form-control" %>
        <p class='text-danger'><%= show_errors(@admin, :password_confirmation) %></p>
      </div>
      <%= f.submit "Sign-up", class:"btn btn-primary"%>
    <% end %>
  </div>
</div>
