<div class='container'>
  <%= link_to 'Add Class', new_class_category_path, class:'btn btn-info'%>
  <button onclick='history.back()' class='btn btn-info float-end'>Go Back</button>
  <h1 class='text-center'> Classes </h1>
  <div class='table-responsive mb-5'>
    <table class='table table-hover container table-bordered border-dark text-center'>
      <thead>
        <tr>
          <th scope='col'>S.No.</th>
          <th scope='col'>Class</th>
          <th scope='col'>Sections</th>
          <th scope='col'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @classes.each_with_index do |c, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= c.classname %></td>
            <td>
              <% c.sections.each do |s| %>
                <%= s.section %>
              <% end %>
            </td>
            <td>
              <%= form_with model: @class_category, url: class_category_path(c), method: :delete, data: {confirm: 'Are you sure?'} do |f| %>
                <%= f.submit 'Delete', class:'btn, btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
