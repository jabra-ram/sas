<%= form_with model: @class_category do |f|%>
  <div class='mb-3'>
    <%= f.label :classname, class:'form-label required' %>
    <%= f.number_field :classname, class:'form-control', disabled: is_edit %>
    <p class='text-danger'><%= show_errors(@class_category, :classname) %></p>
  </div>
  <div class='mb-3'>
    <%= f.label :sections, class:'form-label required' %>
    <%= f.select :sections, Section.pluck(:section, :id), {}, { class: 'form-select', multiple: true }%>
    <p class='p-2'> note: use <code>ctrl</code> button to select multiple sections </p>
  </div>
  <%= f.submit 'Save', class:'btn btn-primary'%>
<% end %>
