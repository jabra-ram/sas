<div class="container">
  <%= link_to "Add fee structure", new_fee_structure_path, class:"btn btn-info"%>
  <button onclick='history.back()' class='btn btn-info float-end'>Go Back</button>
  <h1 class="text-center"> Fee Structures </h1>
  <table class="table table-hover container table-bordered text-center">
    <thead>
      <tr>
        <th scope="col">S.No.</th>
        <th scope="col">Class</th> 
        <th scope="col">Admission Fees</th>
        <th scope="col">Annual Admission Fees</th>
        <th scope="col">Caution Fees</th>
        <th scope="col">Quaterly Tuition Fees</th>
        <th scope="col">Id Card Fees</th>
        <th scope="col">Total</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @fee_structures.each_with_index do |f, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= f.class_category[:classname] %></td>
          <td><%= f.admission_fees %></td>
          <td><%= f.annual_admission_fees %></td>
          <td><%= f.caution_money %></td>
          <td><%= f.quarterly_tuition_fees %></td>
          <td><%= f.id_card_fees %></td>
          <td><%= f.total %></td>
          <td><%= link_to "Edit", edit_fee_structure_path(f), class:"btn btn-warning" %></td>
          <td>
            <%= form_with model: @fee_structure, url: fee_structure_path(f), method: :delete, data: {confirm: "Are you sure?"} do |f| %>
              <%= f.submit "Delete", class:"btn, btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
