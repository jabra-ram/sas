<!DOCTYPE html>
<html>
  <head>
    <title>Sas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <p class="text-center text-success p-3"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="text-center text-danger p-3"><%= flash[:alert] %></p>
    <% end %>

    <% if current_admin %>
      <div class="text-dark m-2">
        Logged in as 
        <span class="text-decoration-underline"> <%= current_admin.email %> </span>
        <%= link_to "Log Out", logout_path, class:"btn btn-danger float-end mx-2"%>
        <%= link_to "Home", admins_path, class:"btn btn-info float-end mx-2"%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
